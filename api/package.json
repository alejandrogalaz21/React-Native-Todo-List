{
  "name": "react-native-todo-list-api",
  "version": "1.0.0",
  "description": "this is the backend api for the todo list app",
  "main": "src/server.js",
  "scripts": {
    "prod": "node dist/server.js",
    "start": "nodemon --exec babel-node src/server.js",
