    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.14.4",
    "@babel/runtime": "^7.14.0",
    "babel-jest": "^27.0.2",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "inquirer": "^8.1.1",
    "inquirer-recursive": "^0.0.7",
    "javascript-obfuscator": "^2.8.1",
